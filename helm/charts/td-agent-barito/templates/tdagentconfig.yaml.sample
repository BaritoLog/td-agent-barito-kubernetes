apiVersion: v1
kind: ConfigMap
metadata:
  name: td-agent-config
  namespace: {{ .Release.Namespace }}
data:
  td-agent.conf: |
    <source>
      type tail
      path /var/log/containers/*.log
      pos_file /var/log/fluentd-containers.log.pos
      time_format %Y-%m-%dT%H:%M:%S.%NZ
      tag kubernetes.*
      <parse>
        @type none
      </parse>
      read_from_head false
    </source>
